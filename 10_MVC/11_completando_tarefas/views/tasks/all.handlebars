<h1>Todas as Tasks</h1>

{{#each tasks}}
  <div class='tasks'>
    {{#if this.done}}
      <a href='/'><h3 class='title done'>{{this.title}}</h3></a>
    {{else}}
      <a href='/'><h3 class='title'>{{this.title}}</h3></a>
    {{/if}}
    <p>Descrição: {{this.description}}</p>
    <div class='actions'>
      {{!  }}
      <form action='/tasks/updatestatus' method='post'>
        <input type='hidden' name='id' value='{{this.id}}' />
        <input type='hidden' name='done' value='{{this.done}}' />
        <button type='submit'>
          <i class='bi bi-check2'></i>
        </button>
      </form>
      {{! EDITAR TAREFA }}
      <a href='/tasks/edit/{{this.id}}'><i class='bi bi-pencil-square'></i></a>
      {{! REMOVER TAREFA }}
      <form action='/tasks/remove' method='post'>
        <input type='hidden' name='id' value='{{this.id}}' />
        <button type='submit'>
          <i class='bi bi-x-square'></i>
        </button>
      </form>

    </div>
  </div>
{{/each}}