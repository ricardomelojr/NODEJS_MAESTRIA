<div class='container mx-auto py-8'>
  <h1 class='text-2xl font-semibold text-gray-800 mb-6 text-center'>{{title}}</h1>

  {{#if students.length}}
    <div class='overflow-x-auto'>
      <table class='min-w-full bg-white border border-gray-200 rounded-lg shadow-md'>
        <thead class='bg-gray-200'>
          <tr>
            <th class='py-2 px-4 border-b text-left text-gray-600 font-semibold'>Nome do Aluno</th>
            <th class='py-2 px-4 border-b text-center text-gray-600 font-semibold'>Presen√ßas</th>
            <th class='py-2 px-4 border-b text-center text-gray-600 font-semibold'>Faltas</th>
          </tr>
        </thead>
        <tbody>
          {{#each students}}
            <tr class='hover:bg-gray-100 transition duration-200'>
              <td class='py-4 px-6 border-b text-gray-800'>{{this.User.name}}</td>
              <td class='py-4 px-6 border-b text-center text-green-600 font-semibold'>{{this.presencas}}</td>
              <td class='py-4 px-6 border-b text-center text-red-600 font-semibold'>{{this.faltas}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class='text-gray-500 text-center mt-4'>Nenhum aluno encontrado para esta tutoria.</p>
  {{/if}}

  <div class='mt-6 text-center'>
    <a href='/tutor/dashboard' class='bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded'>
      Voltar para o Dashboard
    </a>
  </div>
</div>