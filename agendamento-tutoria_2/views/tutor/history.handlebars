<div class='container mx-auto p-4'>
  <h1 class='text-3xl font-bold mb-6 text-center text-gray-800'>Histórico de Sessões</h1>

  {{#if history.length}}
    <div class='flex flex-col items-center'>
      {{#each history}}
        <button
          class='bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg mb-4'
          onclick="window.location.href='/tutor/attendance/history/details/{{day}}'"
        >
          {{day}}
        </button>
      {{/each}}
    </div>
  {{else}}
    <p class='text-gray-500 text-center mt-4'>Nenhum histórico de sessão disponível.</p>
  {{/if}}
</div>