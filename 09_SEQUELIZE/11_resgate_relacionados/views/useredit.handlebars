{{!-- USEREDIT.HANDLEBARS --}}
<form action='/users/update/{{user.id}}' method='post' class='form'>
  <h1>Adicione um usuário</h1>
  <div class='form-control'>
    <label for='name'>Nome: </label>
    <input
      type='text'
      name='name'
      id=''
      placeholder='Digite o nome do usuário'
      value='{{user.name}}'
    />
  </div>

  <div class='form-control'>
    <label for='occupation'>Ocupação: </label>
    <input
      type='text'
      name='occupation'
      id=''
      placeholder='Digite a profissão'
      value='{{user.occupation}}'
    />
  </div>
  <div class='form-control form-checkbox'>
    <input type='checkbox' name='newsletter' {{#if user.newsletter}}checked{{/if}} />
    <label for='newsletter'>Enviar promoções? </label>
  </div>
  <input type='submit' value='Editar' />
</form>

{{!--  --}}
<div class="address-container">
  <h2>Endereço:</h2>
  <form action="/address/create" method="post">
    <input type="hidden" name="UserId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street">
      <label for="number">Nº:</label>
      <input type="text" name="number">
      <label for="city">Cidade:</label>
      <input type="text" name="city">
    </div>    
    <input type='submit' value='Incluir endereço' />
  </form>
  {{!--  --}}  
  <div class="address-list">
    <h2>Lista de endereços</h2>
    {{#each user.Addresses}}
    <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
    {{/each}}
  </div>
</div>