{{!-- USEREDIT.HANDLEBARS --}}
<form action='/users/update/{{user.id}}' method='post' class='form'>
  <h1>Adicione um usuário</h1>
  <div class='form-control'>
    <label for='name'>Nome: </label>
    <input
      type='text'
      name='name'
      id=''
      placeholder='Digite o nome do usuário'
      value='{{user.name}}'
    />
  </div>

  <div class='form-control'>
    <label for='occupation'>Ocupação: </label>
    <input
      type='text'
      name='occupation'
      id=''
      placeholder='Digite a profissão'
      value='{{user.occupation}}'
    />
  </div>

  <div class='form-control form-checkbox'>
    <input type='checkbox' name='newsletter' {{#if user.newsletter}}checked{{/if}} />
    <label for='newsletter'>Enviar promoções? </label>
  </div>
  <input type='submit' value='Editar' />
</form>