<html lang='pt-br'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/css/output.css' />
    <title>{{title}}</title>
  </head>
  <body class='bg-gray-100'>
    <!-- Navbar -->
    <nav class='bg-blue-600 text-white py-4'>
      <div class='max-w-7xl mx-auto px-4 flex justify-between items-center'>
        <!-- Logo -->
        <a href='/' class='text-2xl font-bold text-white'>
          Sistema de Tutoria
        </a>

        <!-- Links de navegação desktop -->
        <div class='hidden md:flex space-x-6'>
          <a href='/' class='hover:text-gray-200 text-white'>Home</a>
          <a href='/about' class='hover:text-gray-200 text-white'>Sobre</a>
          <a href='/tutors' class='hover:text-gray-200 text-white'>Tutores</a>
          <a href='/contact' class='hover:text-gray-200 text-white'>Contato</a>
        </div>

        <!-- Botão de menu mobile -->
        <div class='md:hidden'>
          <button id='menu-btn' class='text-white focus:outline-none'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M4 6h16M4 12h16m-7 6h7'
              />
            </svg>
          </button>
        </div>
      </div>

      <!-- Menu Mobile -->
      <div id='menu' class='hidden md:hidden'>
        <a
          href='/'
          class='block py-2 px-4 text-sm hover:bg-blue-700 text-white'
        >Home</a>
        <a
          href='/about'
          class='block py-2 px-4 text-sm hover:bg-blue-700 text-white'
        >Sobre</a>
        <a
          href='/tutors'
          class='block py-2 px-4 text-sm hover:bg-blue-700 text-white'
        >Tutores</a>
        <a
          href='/contact'
          class='block py-2 px-4 text-sm hover:bg-blue-700 text-white'
        >Contato</a>
      </div>
    </nav>

    <!-- Exibição das mensagens -->
    <div class='max-w-7xl mx-auto px-4 py-4'>
      {{#if success_msg}}
        <div
          class='bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative'
          role='alert'
        >
          <strong class='font-bold'>Sucesso: </strong>
          <span class='block sm:inline'>{{success_msg}}</span>
        </div>
      {{/if}}

      {{#if error_msg}}
        <div
          class='bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative'
          role='alert'
        >
          <strong class='font-bold'>Erro: </strong>
          <span class='block sm:inline'>{{error_msg}}</span>
        </div>
      {{/if}}
    </div>

    <!-- Conteúdo da Página -->
    <main class='py-8'>
      <div class='max-w-7xl mx-auto px-4'>
        {{{body}}}
      </div>
    </main>

    <!-- Script para funcionalidade do menu mobile -->
    <script>
      const menuBtn = document.getElementById('menu-btn'); const menu =
      document.getElementById('menu'); menuBtn.addEventListener('click', () => {
      menu.classList.toggle('hidden'); });
    </script>
  </body>
</html>