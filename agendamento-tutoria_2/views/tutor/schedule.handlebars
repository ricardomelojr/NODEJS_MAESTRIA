<title>{{title}}</title>
<body class='bg-gray-100'>
  <div class='container mx-auto p-4'>
    <h1 class='text-3xl font-bold mb-6 text-center text-gray-800'>Minhas Sessões</h1>

    {{#if availabilities.length}}
      <table class='min-w-full bg-white border border-gray-200 rounded-lg shadow-md text-center'>
        <thead class='bg-gray-200'>
          <tr>
            <th class='py-3 px-6 border-b text-gray-700 font-semibold'>Dia da Semana</th>
            <th class='py-3 px-6 border-b text-gray-700 font-semibold'>Início</th>
            <th class='py-3 px-6 border-b text-gray-700 font-semibold'>Fim</th>
            <th class='py-3 px-6 border-b text-gray-700 font-semibold'>Quantidade de Alunos</th>
            <th class='py-3 px-6 border-b text-gray-700 font-semibold'>Ações</th>
          </tr>
        </thead>
        <tbody>
          {{#each availabilities}}
            <tr class='hover:bg-gray-100 transition duration-200'>
              <td class='py-4 px-6 border-b text-gray-800'>{{this.day}}</td>
              <td class='py-4 px-6 border-b text-gray-800'>{{this.startTime}}</td>
              <td class='py-4 px-6 border-b text-gray-800'>{{this.endTime}}</td>
              <td class='py-4 px-6 border-b text-gray-800'>{{this.studentCount}}</td>
              <td class='py-4 px-6 border-b text-gray-800'>
                <!-- Botão Gerenciar Presença -->
                <a
                  href='/tutor/attendance/{{this.id}}'
                  class='bg-blue-500 hover:bg-blue-600 text-white text-sm font-semibold py-2 px-4 rounded-md mx-2'
                >
                  Gerenciar Presença
                </a>
                <!-- Botão Alunos -->
                <a
                  href='/students/{{this.id}}'
                  class='bg-green-500 hover:bg-green-600 text-white text-sm font-semibold py-2 px-4 rounded-md mx-2'
                >
                  Alunos
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p class='text-gray-500 text-center mt-4'>Você não tem sessões agendadas.</p>
    {{/if}}
  </div>
</body>