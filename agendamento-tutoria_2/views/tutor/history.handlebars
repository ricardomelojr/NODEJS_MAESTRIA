<div class='container mx-auto py-8'>
  <!-- Título da página -->
  <h1 class='text-2xl font-semibold text-gray-800 mb-6 text-center'>Histórico de Sessões</h1>

  <!-- Verifica se há sessões no histórico -->
  {{#if sessions.length}}
    <!-- Tabela de histórico de sessões -->
    <div class='overflow-x-auto'>
      <table class='min-w-full bg-white border border-gray-200 text-center'>
        <thead>
          <tr>
            <th class='py-2 px-4 border-b text-gray-600 font-semibold'>Disciplina</th>
            <th class='py-2 px-4 border-b text-gray-600 font-semibold'>Data</th>

            <!-- Nova coluna para assunto -->
            <th class='py-2 px-4 border-b text-gray-600 font-semibold'>Ação</th>
          </tr>
        </thead>
        <tbody>
          <!-- Loop para exibir cada sessão no histórico -->
          {{#each sessions}}
            <tr class='text-center'>
              <!-- Centraliza o texto da linha -->
              <!-- Exibe o assunto da sessão -->
              <td class='py-2 px-4 border-b text-gray-700'>{{this.subject}}</td>
              <!-- Exibe a data da sessão -->
              <td class='py-2 px-4 border-b text-gray-700'>{{this.date}}</td>

              <!-- Nova célula para assunto -->

              <!-- Campo hidden para armazenar idAvailability -->
              <td class='py-2 px-4 border-b'>
                <form action='/tutor/session/details' method='GET' class='flex justify-center'>
                  <!-- Flex para centralizar o botão -->
                  <input type='hidden' name='idAvailability' value='{{this.idAvailability}}' />

                  <!-- Botão Verificar -->
                  <button
                    type='submit'
                    class='bg-blue-500 hover:bg-blue-600 text-white font-semibold py-1 px-4 rounded'
                  >
                    Verificar
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <!-- Caso não tenha sessões registradas -->
    <p class='text-gray-600 mt-4 text-center'>Nenhuma sessão registrada no histórico.</p>
  {{/if}}

  <!-- Botão de voltar para o Dashboard -->
  <div class='mt-6 text-center'>
    <a href='/tutor/dashboard' class='bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded'>
      Voltar para o Dashboard
    </a>
  </div>
</div>