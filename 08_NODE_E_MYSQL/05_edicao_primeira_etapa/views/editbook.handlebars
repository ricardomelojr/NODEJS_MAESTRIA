<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Edição de Livros</title>

  </head>
  <body>
    <h1>Edite o seu livro:</h1>
    <form action='/books/updatebook' method='POST' class='form'>
      <div class='form-control'>
        <label for='title'>Título:</label>
        <input
          type='text'
          id='title'
          name='title'
          placeholder='Informe o título do livro'
          value='{{book.title}}'
        />
      </div>
      <div class='form-control'>
        <label for='pageqty'>Número de páginas:</label>
        <input
          type='number'
          id='pageqty'
          name='pageqty'
          placeholder='Informe a quantidade de páginas'
          value='{{book.pageqty}}'
        />
      </div>
      <input type='submit' value='Editar' />
      <input type='button' value='Faz o L' id='fazOLButton' />
    </form>
    <script src='script.js'></script>
  </body>
</html>