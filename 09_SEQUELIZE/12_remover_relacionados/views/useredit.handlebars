{{!-- USEREDIT.HANDLEBARS --}}
<form action='/users/update/{{user.id}}' method='post' class='form'>
  <h1>Editar usuário</h1>
  <div class='form-control'>
    <label for='name'>Nome: </label>
    <input
      type='text'
      name='name'
      id='name'
      placeholder='Digite o nome do usuário'
      value='{{user.name}}'
    />
  </div>

  <div class='form-control'>
    <label for='occupation'>Ocupação: </label>
    <input
      type='text'
      name='occupation'
      id='occupation'
      placeholder='Digite a profissão'
      value='{{user.occupation}}'
    />
  </div>
  <div class='form-control form-checkbox'>
    <input type='checkbox' name='newsletter' id='newsletter' {{#if user.newsletter}}checked{{/if}} />
    <label for='newsletter'>Enviar promoções? </label>
  </div>
  <input type='submit' value='Editar' />
</form>

<div class="address-container">
  <h2>Endereço:</h2>
  <form action="/address/create" method="post">
    <input type="hidden" name="UserId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" id="street">
      <label for="number">Nº:</label>
      <input type="text" name="number" id="number">
      <label for="city">Cidade:</label>
      <input type="text" name="city" id="city">
    </div>    
    <input type='submit' value='Incluir endereço' />
  </form>
  
  <div class="address-list">
    <h2>Lista de endereços</h2>
    {{#each user.Addresses}}
    <div>
      #{{this.id}} 
      - {{this.street}} 
      - {{this.number}} 
      - {{this.city}}
      <form action="/address/delete" method="post">
        <input type="hidden" name="UserId" value="{{../user.id}}" />
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="submit" value="Excluir">
      </form>
    </div>
    {{/each}}
  </div>
</div>
